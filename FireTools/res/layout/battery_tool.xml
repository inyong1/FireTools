<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:background="#000">

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:background="@drawable/list_view_selector"
		android:padding="3dp">
		<CheckBox
			android:id="@+id/checkbox_on_of_service"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerInParent="true"/>
		
		
		<TextView
			android:id="@+id/tv_on_off_service"
			android:layout_alignParentLeft="true"
			android:text="Enable/disable battery tool service"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#339933"
			android:textSize="18sp"
			android:layout_toLeftOf="@id/checkbox_on_of_service"/>

	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="#555555"/>

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:background="@drawable/list_view_selector"
		android:padding="3dp">

		<TextView
			android:id="@+id/tv_on_off_batterytool_log_judul"
			android:layout_alignParentLeft="true"
			android:text="Enable/disable logging"
			android:layout_width="wrap_content"
			android:textColor="#339933"
			android:layout_height="wrap_content"
			android:textSize="18sp"/>

		<CheckBox
			android:id="@+id/checkbox_on_off_batterytool_log"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerInParent="true"/>
		<TextView
			android:id="@+id/tv_on_off_batterytool_log_ket"
			android:layout_alignParentLeft="true"
			android:text="/sdcard/FireTools/Log/BatteryTool.log"
			android:layout_centerInParent="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_on_off_batterytool_log_judul"
			android:layout_toLeftOf="@id/checkbox_on_off_batterytool_log"/>
		

	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="#555555"/>

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:padding="3dp"
		android:background="@drawable/list_view_selector"
		android:gravity="center_vertical">

		<TextView
			android:id="@+id/tv_on_off_batterytool_extra_level_judul"
			android:layout_alignParentLeft="true"
			android:text="Shows extra level"
			android:layout_width="wrap_content"
			android:textColor="#339933"
			android:layout_height="wrap_content"
			android:textSize="18sp"/>

		<CheckBox
			android:id="@+id/checkbox_on_off_batterytool_extra_level"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerInParent="true"/>

		<TextView
			android:id="@+id/tv_on_off_batterytool_extra_level_ket"
			android:layout_alignParentLeft="true"
			android:text="shows 101%, 102%, 103%, and so on \ninstead always shows 100%"
			android:layout_centerInParent="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_on_off_batterytool_extra_level_judul"
			android:layout_alignLeft="@id/checkbox_on_off_batterytool_extra_level"
			android:layout_toLeftOf="@id/checkbox_on_off_batterytool_extra_level"/>

	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="#555555"/>

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:padding="3dp"
		android:background="@drawable/list_view_selector"
		android:gravity="center_vertical">

		<TextView
			android:id="@+id/tv_on_off_batterytool_toast_judul"
			android:layout_alignParentLeft="true"
			android:text="Toast message"
			android:layout_width="wrap_content"
			android:textColor="#339933"
			android:layout_height="wrap_content"
			android:textSize="18sp"/>

		<CheckBox
			android:id="@+id/checkbox_on_off_batterytool_toast"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerInParent="true"/>

		<TextView
			android:id="@+id/tv_on_off_batterytool_toast_level_ket"
			android:layout_alignParentLeft="true"
			android:text="shows toast message every time battery level changed"
			android:layout_centerInParent="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_on_off_batterytool_toast_judul"
			android:layout_toLeftOf="@id/checkbox_on_off_batterytool_toast"/>

	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="#555555"/>

</LinearLayout>

