<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/layout_backup_tool"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:clickable="true"
				android:background="@drawable/list_view_selector"
				
				android:padding="5dip"
				android:gravity="center_vertical">
				<ImageView
					android:layout_width="50dp"
					android:gravity="center"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_nandroid"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="3dp"
					android:orientation="vertical">
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Nandroid (ROM) Backup Tool"
						android:textStyle="bold"
						android:textColor="#339933"
						android:textSize="18dp"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Backup system, userdata, dan sd-ext dengan metode backup CWM"/>
				</LinearLayout>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#555555"/>
				
			<LinearLayout
				android:id="@+id/layout_buat_link_folder_data"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:clickable="true"
				android:background="@drawable/list_view_selector"
				android:padding="5dip"
				android:gravity="center_vertical">
				<ImageView
					android:layout_width="50dp"
					android:gravity="center"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_link"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:paddingLeft="3dp">
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Create Link Application\'s Data"
						android:textStyle="bold"
						android:textColor="#339933"
						android:textSize="18dp"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Link-an folder data aplikasi-aplikasi agar memori internal lebih kosong"/>
				</LinearLayout>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#555555"/>
			<LinearLayout
				android:id="@+id/layout_link_dalvik_system"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:clickable="true"
				android:background="@drawable/list_view_selector"
				android:padding="5dip"
				android:gravity="center_vertical">
				<ImageView
					android:layout_width="50dp"
					android:gravity="center"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_link"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:paddingLeft="3dip">
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Create Link System\'s Dalvik-Cache"
						android:textStyle="bold"
						android:textColor="#339933"
						android:textSize="18dp"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Link-an dalvik cache aplikasi system agar memori internal lebih kosong"/>
				</LinearLayout>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#555555"/> 
			<LinearLayout
				android:id="@+id/layout_clear_system_log"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:clickable="true"
				android:background="@drawable/list_view_selector"
				android:padding="5dip"
				android:gravity="center_vertical">
				<ImageView
					android:layout_width="50dp"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:src="@drawable/ic_clear"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:paddingLeft="3dip">
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Clear System Log"
						android:textStyle="bold"
						android:textColor="#339933"
						android:textSize="18dp"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Bersihkan file-file log system yang sudah tidak terpakai"/>
				</LinearLayout>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#555555"/>
			<LinearLayout
				android:id="@+id/layout_restart"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:clickable="true"
				android:background="@drawable/list_view_selector"
				android:padding="5dip"
				android:gravity="center_vertical">
				<ImageView
					android:layout_width="50dp"
					android:gravity="center"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_restart"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:padding="3dp">
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Restart and Auto CWM Mode"
						android:textStyle="bold"
						android:textColor="#339933"
						android:textSize="18dp"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Restart, stock recovery, CWM, fastboot"/>
				</LinearLayout>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#555555"/> 
			<LinearLayout
				android:id="@+id/layout_sms_dan_contact_tools"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:clickable="true"
				android:background="@drawable/list_view_selector"
				android:padding="5dip"
				android:gravity="center_vertical">
				<ImageView
					android:layout_width="50dp"
					android:gravity="center"
					android:layout_height="wrap_content"
					android:src="@drawable/sms_contact"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:paddingLeft="3dp">
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="SMS and Contact Tools"
						android:textStyle="bold"
						android:textColor="#339933"
						android:textSize="18dp"/>
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Backup and Restore SMS and Contact to SDcard,"/>
				</LinearLayout>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="dp"
				android:background="#555555"/> 
		</LinearLayout>
	</ScrollView>
</LinearLayout>
